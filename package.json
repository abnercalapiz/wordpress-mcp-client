{
  "name": "@abnerjezweb/wordpress-mcp-client",
  "version": "1.0.9",
  "description": "JavaScript/TypeScript client for WordPress LLM Ready MCP endpoints",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "scripts",
    "bin",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "bin": {
    "mcp-site": "./scripts/mcp-cli.js",
    "wordpress-mcp-server": "./bin/wordpress-mcp-server",
    "wordpress-mcp-server-roo": "./bin/wordpress-mcp-server-roo"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build && npm test",
    "example": "node examples/basic-usage.js",
    "mcp": "node scripts/mcp-cli.js",
    "mcp:add": "node scripts/mcp-cli.js add",
    "mcp:list": "node scripts/mcp-cli.js list",
    "mcp:remove": "node scripts/mcp-cli.js remove",
    "mcp:validate": "node scripts/mcp-cli.js validate",
    "mcp:interactive": "node scripts/mcp-cli.js interactive",
    "serve": "node scripts/mcp-serve.js"
  },
  "keywords": [
    "wordpress",
    "mcp",
    "ai",
    "llm",
    "claude",
    "chatgpt",
    "api-client",
    "model-context-protocol"
  ],
  "author": "Jezweb <hello@jezweb.com.au>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abnercalapiz/wordpress-mcp-client"
  },
  "bugs": {
    "url": "https://github.com/abnercalapiz/wordpress-mcp-client/issues"
  },
  "homepage": "https://github.com/abnercalapiz/wordpress-mcp-client#readme",
  "dependencies": {
    "node-fetch": "^2.7.0",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "inquirer": "^8.2.6"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/node-fetch": "^2.6.9",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}